<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OnClickListenerActivity">
    <include
        app:layout_constraintTop_toBottomOf="parent"
        android:id="@+id/ilTitle"
        layout="@layout/layout_head_title"/>
    <TextView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ilTitle"
        android:background="#f3f3f3"
        android:id="@+id/tvOnClick"
        android:text="单击事件"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:background="#f3f3f3"
        app:layout_constraintTop_toBottomOf="@id/tvOnClick"
        android:id="@+id/tvOnLongClick"
        android:text="长按事件"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</android.support.constraint.ConstraintLayout>