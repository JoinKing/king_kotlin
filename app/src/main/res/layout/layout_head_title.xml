<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tvImgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dip_15"
            android:drawableLeft="@mipmap/img_back2"
            android:drawablePadding="@dimen/dip_5"
            android:gravity="center_vertical"
            android:text="@string/back"
            android:textColor="@color/color_757575"
            android:textSize="@dimen/text_size_17"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_22" />

        <TextView
            android:id="@+id/tvRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dip_15"
            android:onClick="txtRightControls"
            android:text=""
            android:textColor="@color/color_6888E1"
            android:textSize="@dimen/text_size_17"
            android:visibility="gone" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>